<Window x:Class="Negosud.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Produits" Height="450" Width="800">
    <Grid>
        <ListView Name="lvProducts" Margin="10" Height="300" SelectionChanged="lvProducts_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ProductID}" Width="50"/>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Prix" DisplayMemberBinding="{Binding Price}" Width="100"/>
                    <GridViewColumn Header="Stock" DisplayMemberBinding="{Binding Stock}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="btnAdd" Content="Ajouter Produit" Height="30" VerticalAlignment="Bottom" Click="btnAdd_Click" Margin="158,0,483,0"/>
        <Button Name="btnEdit" Content="Modifier Produit" Height="30" VerticalAlignment="Bottom" Margin="317,0,345,0" Click="btnEdit_Click"/>
        <Button Name="btnDelete" Content="Supprimer Produit" Height="30" VerticalAlignment="Bottom" Margin="455,0,213,0" Click="btnDelete_Click"/>
    </Grid>
</Window>
