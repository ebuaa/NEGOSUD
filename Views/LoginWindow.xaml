<Window x:Class="Negosud.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:" />
            <TextBox x:Name="txtUsername" Margin="0,5,0,10"/>

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,20"/>

            <Button Content="Login" Click="btnLogin_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
