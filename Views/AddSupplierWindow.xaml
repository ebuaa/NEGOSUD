<Window x:Class="Negosud.Views.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add or Edit Supplier" Height="200" Width="400">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtCustomerName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Width="200"/>

        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="txtCustomerEmail" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,50,0,0" Width="200"/>

        <Label Content="ContactInfo:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <TextBox Name="txtCustomerPhone" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,90,0,0" Width="200"/>

        <Button Name="btnSaveCustomer" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,10,0,0" Width="80" Click="btnSaveCustomer_Click"/>
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,10,0" Width="80" Click="btnCancel_Click"/>
    </Grid>
</Window>
