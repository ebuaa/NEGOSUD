<Window x:Class="Negosud.Views.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Orders" Height="400" Width="600">
    <StackPanel Margin="10">
        <TextBlock Text="Orders" FontWeight="Bold" FontSize="16"/>
        <DataGrid x:Name="dgOrders" AutoGenerateColumns="False" Margin="0,10,0,10"
                  SelectionChanged="dgOrders_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" />
                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" />
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" />
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Add" Click="btnAdd_Click" Margin="5"/>
            <Button Content="Edit" Click="btnEdit_Click" Margin="5"/>
            <Button Content="Delete" Click="btnDelete_Click" Margin="5"/>
            <Button Content="Return" Click="btnReturn_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
