<Window x:Class="Negosud.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Catégorie" Height="300" Width="400">
    <Grid>
        <Label Content="Nom de la Catégorie:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="txtCategoryName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>

        <Button Content="Ajouter" Name="btnAddCategory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="100" Click="btnAddCategory_Click"/>
        <Button Content="Modifier" Name="btnUpdateCategory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,50,0,0" Width="100" Click="btnUpdateCategory_Click"/>
        <Button Content="Supprimer" Name="btnDeleteCategory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,50,0,0" Width="100" Click="btnDeleteCategory_Click"/>

        <ListBox Name="lstCategories" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="360" Height="150" SelectionChanged="lstCategories_SelectionChanged"/>
    </Grid>
</Window>
