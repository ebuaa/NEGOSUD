<Window x:Class="Negosud.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter/Modifier Catégorie" Height="200" Width="400">
    <Grid>
        <Label Content="Nom de la Catégorie:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0"/>
        <TextBox Name="txtCategoryName" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Margin="150,20,0,0"/>

        <Button Content="Sauvegarder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="30,80,0,0" Click="btnSaveCategory_Click"/>
        <Button Content="Annuler" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="150,80,0,0" Click="btnCancel_Click"/>
    </Grid>
</Window>
