<Window x:Class="Negosud.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Name:" />
        <TextBox x:Name="txtName" Margin="0,0,0,10" />

        <TextBlock Text="Description:" />
        <TextBox x:Name="txtDescription" Margin="0,0,0,10" />

        <TextBlock Text="Price:" />
        <TextBox x:Name="txtPrice" Margin="0,0,0,10" />

        <TextBlock Text="Stock:" />
        <TextBox x:Name="txtStock" Margin="0,0,0,10" />

        <TextBlock Text="Minimum Stock:" />
        <TextBox x:Name="txtMinimumStock" Margin="0,0,0,10" />

        <TextBlock Text="Category:" />
        <ComboBox x:Name="cmbCategories" Margin="0,0,0,10" />

        <TextBlock Text="Supplier:" />
        <ComboBox x:Name="cmbSuppliers" Margin="0,0,0,10" />

        <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Margin="5"/>
    </StackPanel>
</Window>
