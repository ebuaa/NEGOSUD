<Window x:Class="Negosud.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Produit" Height="500" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Nom:" />
        <TextBox x:Name="txtName" Margin="0,0,0,10" />

        <TextBlock Text="Description:" />
        <TextBox x:Name="txtDescription" Margin="0,0,0,10" />

        <TextBlock Text="Prix:" />
        <TextBox x:Name="txtPrice" Margin="0,0,0,10" />

        <TextBlock Text="Stock:" />
        <TextBox x:Name="txtStock" Margin="0,0,0,10" />

        <TextBlock Text="Stock Minimum:" />
        <TextBox x:Name="txtMinimumStock" Margin="0,0,0,10" />

        <TextBlock Text="Catégorie:" />
        <ComboBox x:Name="cmbCategories" Margin="0,0,0,10" />

        <TextBlock Text="Fournisseur:" />
        <ComboBox x:Name="cmbSuppliers" Margin="0,0,0,10" />

        <TextBlock Text="Image URL:" />
        <TextBox x:Name="txtImageUrl" Margin="0,0,0,10" />
        <Button x:Name="btnBrowseImage" Content="Parcourir" Click="btnBrowseImage_Click" Margin="5" />

        <Button x:Name="btnSave" Content="Enregistrer" Click="btnSave_Click" Margin="5"/>
    </StackPanel>
</Window>
