<Window x:Class="Negosud.Views.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Produit" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Label for Name -->
            <Label Content="Nom du Produit" />
            <TextBox Name="txtName" Margin="0,5,0,10" />

            <!-- Label for Description -->
            <Label Content="Description" />
            <TextBox Name="txtDescription" Margin="0,5,0,10" />

            <!-- Label for Price -->
            <Label Content="Prix" />
            <TextBox Name="txtPrice" Margin="0,5,0,10" />

            <!-- Label for Stock -->
            <Label Content="Quantité en Stock" />
            <TextBox Name="txtStock" Margin="0,5,0,10" />

            <!-- Save Button -->
            <Button Name="btnSave" Content="Enregistrer les modifications" Click="btnSave_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
