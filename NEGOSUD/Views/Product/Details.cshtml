@model NEGOSUD.Models.Entities.Product

@{
    ViewData["Title"] = "Détails";
}

<!--
<h1>Détails</h1>
-->

<!-- Single Product Start -->
<div class="container-fluid pb-5 pt-xl-2 ">
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <div class="col-lg-8 col-xl-9">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="border rounded">
                            <img src="@Url.Content("~/" + Model.ImageUrl)" class="img-fluid rounded" alt="Image">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h4 class="fw-bold mb-3"> @Html.DisplayFor(model => model.Name)</h4>
                        <p class="mb-3">Catégorie: @Html.DisplayFor(model => model.Category.Name)</p>
                        <p>Année: @Html.DisplayFor(Model => Model.Year)</p>
                        <p>Stock: @Html.DisplayFor(model => model.StockQuantity)</p>
                        <h5 class="fw-bold mb-3">@Html.DisplayFor(model => model.PricePerUnit) €</h5>
                        <div class="d-flex mb-4">
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <p class="mb-4">@Html.DisplayFor(Model => Model.Description)</p>
                        
                        
                        <form asp-controller="Order" asp-action="AddDetail" method="post">
                            <div class="mb-2">
                            <input type="hidden" value="@Model.ProductID" name="ProductID" />
                            <div class="form-group">
                                <label for="StockQuantity">Quantity</label>
                                <input type="number" class="form-control w-50" id="StockQuantity" name="StockQuantity" value="1" min="1" />
                            </div>
                    </div>
                            <button type="submit" class="btn border border-primary bg-primary rounded-pill px-4 py-2 mb-4 text-white"><i class="bi bi-cart-plus"></i> Ajouter au panier</button>
                        </form>

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xl-3">
                <div class="row g-4 fruite">
                    <div class="col-lg-12">
                        <div class="input-group w-100 mx-auto d-flex mb-4">
                            <form method="get" action="@Url.Action("Index", "Product")">
                                <div class="input-group w-100 mx-auto d-flex">
                                    <input type="search" name="search" value="@ViewBag.search" class="form-control p-3" placeholder="mots-clés" aria-describedby="search-icon-1">
                                    <button type="submit" class="input-group-text p-3" id="search-icon-1">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="mb-4">
                            <h4>Catégories</h4>
                            <ul class="list-unstyled fruite-categorie">
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a href="@Url.Action("Index", new { category = "Rouge" })"><i class="fas fa-wine-bottle me-2"></i>Rouge</a>
                                        <!-- <span>(3)</span> -->
                                    </div>
                                </li>
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a href="@Url.Action("Index", new { category = "Blanc" })"><i class="fas fa-wine-bottle me-2"></i>Blanc</a>
                                        <!--<span>(5)</span>-->
                                    </div>
                                </li>
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a href="@Url.Action("Index", new { category = "Rosé" })"><i class="fas fa-wine-bottle me-2"></i>Rosé</a>
                                        <!-- <span>2</span> -->
                                    </div>
                                </li>
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a href="@Url.Action("Index", new { category = "Champagne" })"><i class="fas fa-wine-bottle me-2"></i>Champagne</a>
                                        <!-- <span>8</span> -->
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
