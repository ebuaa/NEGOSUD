    <!-- Featurs Section End -->
    <div class="container-fluid py-5">
        <div class="container pt-5">
            <div class="text-center mx-auto mb-1" style="max-width: 700px;">
                <h2 class="display-4">Produits les Plus Récents</h2>
                <p>
                    Découvrez notre sélection des vins les plus récents et les plus raffinés. Chaque bouteille est soigneusement choisie pour vous offrir une expérience exceptionnelle.
                </p>
            </div>
            <div class="owl-carousel owl-theme products-carousel px-xl-4">
                @foreach (var product in Model)
                {
                   
                        <div class="rounded position-relative fruite-item card">
                            <div class="fruite-img">
                                <img src="https://picsum.photos/300" class="img-fluid rounded-top w-100" alt="">
                            </div>
                            <div class="text-white bg-primary bg-gradient px-3 py-2 rounded position-absolute" style="top: 10px; left: 10px;">
                                @Html.DisplayFor(modelItem => product.Category.Name)
                            </div>
                            <div class="text-white bg-dark bg-gradient px-3 py-2 rounded position-absolute" style="top: 10px; left: 95px;">
                                @Html.DisplayFor(modelItem => product.Year)
                            </div>
                            <div class="text-white bg-warning bg-gradient px-3 py-2 rounded position-absolute" style="top: 10px; left: 170px;">
                                Nouveau
                            </div>
                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                <h5><a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductID"> @Html.DisplayFor(modelItem => product.Name)</a></h5>
                                <div class="d-flex justify-content-between">
                                    <p class="text-dark fs-5 fw-bold mb-0"> @Html.DisplayFor(model => product.PricePerUnit) €</p>
                                    <p><span>Stock: </span>@Html.DisplayFor(modelItem => product.StockQuantity)</p>
                                </div>
                                <form asp-controller="Order" asp-action="AddDetail" method="post">
                                    <div class="mb-2">
                                        <input type="hidden" value="@product.ProductID" name="ProductID" />
                                        <div class="form-group">
                                            <label for="StockQuantity">Quantity</label>
                                            <input type="number" class="form-control w-50" id="StockQuantity" name="StockQuantity" value="1" min="1" />
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-outline-primary border border-primary px-3"><i class="bi bi-cart-plus"></i> Ajouter au panier</button>
                                </form>
                            </div>
                        </div>
                    
                }
            </div>
        </div>
    </div>

