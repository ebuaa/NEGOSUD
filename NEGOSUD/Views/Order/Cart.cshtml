@{
}

<h1>Cart</h1>

<!--Form to finalise and create the order-->

<form asp-action="PlaceOrder" method="post">
	<h3>Table Order</h3>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Product</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.OrderDetails.Count; i++)
			{
				<tr>
					<td>@Model.OrderDetails[i].ProductName</td>
					<td>@Model.OrderDetails[i].Quantity</td>
					<td>@Model.OrderDetails[i].Price €</td>
					<td>@(Model.OrderDetails[i].Quantity * Model.OrderDetails[i].Price) €</td>
				</tr>
			}
			<tr>
				<td colspan="3" class="text-end">Total:</td>
				<td class="bg-primary bg-gradient text-white fw-bold">@Model.TotalAmount €</td>
			</tr>
		</tbody>
	</table>

	<div class="form-group">
		<input type="submit" value="Place Order" class="btn btn-primary" />
	</div>
</form>
