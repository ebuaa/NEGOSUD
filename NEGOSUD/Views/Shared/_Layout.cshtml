<body>

      <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div> 
        <!-- Spinner End -->



	<!-- Start Header Area -->
	<header>
		<div>
            <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
                <div class="container px-4 px-lg-5">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/1.svg" style="height:80px;" />
                        </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                            <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a></li>
                           @*  <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">About</a></li> *@
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" asp-area="" asp-controller="Home" asp-action="Index" role="button" data-bs-toggle="dropdown" aria-expanded="false">Vins</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Tous les produits</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li ><a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">Categories de Produits</a></li>
                                    @* <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">New Arrivals</a></li> *@
                                </ul>
                            </li>
                        </ul>
      
                        <partial name="_LoginPartial" />

                    </div>
                </div>
            </nav>
		</div>
		
	</header>
	<!-- End Header Area -->
