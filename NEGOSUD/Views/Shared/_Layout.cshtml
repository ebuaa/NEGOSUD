<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NEGOSUD</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/simplex.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NEGOSUD.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css" asp-append-version="true" />

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Start Header Area -->
    <header>
        <div class="fixed-top">
            <div class="topbar bg-dark d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3">
                            <i class="bi bi-geo-alt-fill me-2 text-white"></i> <a href="#"
                                                                                         class="text-white">456 Rue de la Vigne, 32000 Auch, France</a>
                        </small>
                        <small class="me-3">
                            <i class="bi bi-envelope-fill me-2 text-white"></i><a href="#"
                                                                                  class="text-white">contact@negosud-gascogne.fr</a>
                        </small>
                    </div>
                    <div class="top-link pe-2">
                        <a href="#" class="text-white"><small class="text-white mx-2">Politique de Confidentialité</small>/</a>
                        <a href="#" class="text-white"><small class="text-white mx-2">Conditions d'Utilisation</small>/</a>
                        <a href="#" class="text-white"><small class="text-white ms-2">Ventes et Remboursements</small></a>

                    </div>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg bg-primary sticky-top" data-bs-theme="dark">
                <div class="container px-4 px-lg-5">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/1.svg" style="height:80px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse bg-primary rounded p-3 ps-5" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                            <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Product" asp-action="Index">Produits</a></li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!-- End Header Area -->

    <div class="container-fluid py-5 mb-5">
    <div class="container py-5">
        <main role="main" class="py-5 mt-5">
            @RenderBody()
        </main>
        </div>
    </div>
    <footer class="border-top footer bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center text-md-start my-2">
                    <p class="text-white mb-0">
                        <i class="bi bi-geo-alt-fill me-2"></i>456 Rue de la Vigne, 32000 Auch, France
                    </p>
                </div>
                <div class="col-md-4 text-center my-2">
                    <p class="text-white mb-0">
                        <i class="bi bi-envelope-fill me-2"></i>contact@negosud-gascogne.fr
                    </p>
                </div>
                <div class="col-md-4 text-center text-md-end my-2">
                    <p class="text-white mb-0">
                        <i class="bi bi-telephone-fill me-2"></i>+33 5 62 61 23 45
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center my-2">
                    <p class="m-0 copyright">Copyright &copy; 2024 - NEGOSUD -</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
