
@{
    ViewData["Title"] = "Index";
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price per Unit</th>
            <th>Stock Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category?.Name</td> <!-- Optional chaining to handle null categories -->
                <td>@product.PricePerUnit</td>
                <td>@product.StockQuantity</td>
            </tr>
        }
    </tbody>
</table>

