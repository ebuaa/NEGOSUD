@page
@model RegisterModel
@{
    ViewData["Title"] = "S'inscrire";
}

<h1>@ViewData["Title"]</h1>

<div class="row h-100 pb-4 my-4">
    <div class="col-md-6 pb-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Créer un nouveau compte.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- First Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="Prénom" />
                <label asp-for="Input.FirstName">Prénom</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Nom de famille" />
                <label asp-for="Input.LastName">Nom de famille</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <!-- Address Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" aria-required="true" placeholder="Adresse" />
                <label asp-for="Input.Address">Adresse</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <!-- Telephone Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Telephone" class="form-control" autocomplete="tel" aria-required="true" placeholder="Numéro de téléphone" />
                <label asp-for="Input.Telephone">Numéro de téléphone</label>
                <span asp-validation-for="Input.Telephone" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nom@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="mot de passe" />
                <label asp-for="Input.Password">Mot de passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirmer le mot de passe" />
                <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">S'inscrire</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <img src="~/images/Register.png" class="img-fluid d-none d-md-block" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
